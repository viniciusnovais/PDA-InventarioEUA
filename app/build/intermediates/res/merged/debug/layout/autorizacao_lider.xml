<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundopreto" >

    <EditText
        android:id="@+id/etUserLider"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_x="62dp"
        android:layout_y="34dp"
        android:background="@android:color/white"
        android:backgroundTint="@color/switch_thumb_normal_material_dark"
        android:backgroundTintMode="add"
        android:ems="10"
        android:inputType="text"
        android:textColor="@android:color/black" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="62dp"
        android:layout_y="12dp"
        android:text="@string/login_tvUsuario"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/etPasswordLider"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_x="62dp"
        android:layout_y="92dp"
        android:background="@android:color/white"
        android:backgroundTint="@color/switch_thumb_normal_material_dark"
        android:backgroundTintMode="add"
        android:ellipsize="none"
        android:ems="10"
        android:inputType="textPassword"
        android:scrollbarStyle="outsideOverlay"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/white" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="62dp"
        android:layout_y="70dp"
        android:text="@string/login_tvPassword"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="110dp"
        android:layout_height="47dp"
        android:layout_x="100dp"
        android:layout_y="127dp"
        android:background="@drawable/selector_button"
        android:drawableRight="@drawable/ok"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Ok"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</AbsoluteLayout>